{% extends 'fe/base.html.twig' %}
{% set seo = project.seo %}
{% use '@PNSeo/FrontEnd/seo.html.twig' %}
{% import 'fe/macros.html.twig' as macros %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('vendors/swiper/swiper.min.css') }}"/>
{% endblock %}

{% block content %}
    {% set coverPhoto = 'images/placeholders/placeholder-lg.jpg' %}
    {% set mainImage = 'images/placeholders/placeholder-md.jpg' %}
    {% if project.post.imageByType(constant("\\App\\MediaBundle\\Entity\\Image::TYPE_COVER_PHOTO")) %}
        {% set coverPhoto = project.post.imageByType(constant("\\App\\MediaBundle\\Entity\\Image::TYPE_COVER_PHOTO")).assetPath %}
    {% endif %}
    {% if project.post.mainImage %}
        {% set mainImage = project.post.mainImage.assetPath %}
    {% endif %}
    {% set galleryImages = project.post.images([constant("\\App\\MediaBundle\\Entity\\Image::TYPE_GALLERY")]) %}

    {% if galleryImages is not empty %}
        <section class="main-slider main-slider-two">
            <div
                    class="swiper-container thm-swiper__slider"
                    data-swiper-options='{"slidesPerView": 1, "loop": true,
        "pagination": {
            "el": "#main-slider-pagination",
            "type": "bullets",
            "clickable": true
        },
        "navigation": {
            "nextEl": "#main-slider__swiper-button-next",
            "prevEl": "#main-slider__swiper-button-prev"
        },
        "autoplay": {
            "delay": 5000
        }}'
            >
                <div class="swiper-wrapper">
                    {% for galleryImage in galleryImages %}
                        <div class="swiper-slide">
                            <div class="image-layer" style="background-image: url({{ asset(galleryImage.assetPath) }});"></div>
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="main-slider__content text-center">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- If we need navigation buttons -->
                <div class="main-slider__nav main-slider-two__nav">
                    <div class="swiper-button-prev" id="main-slider__swiper-button-next">
                        <span class="main-slider__next-text">{{ 'next_txt'|trans }}</span>
                        <i class="icon-right-arrow icon-left-arrow"></i>
                    </div>
                    <div class="swiper-button-next" id="main-slider__swiper-button-prev">
                        <span class="main-slider__prev-text">{{ 'prev_txt'|trans }}</span>
                        <i class="icon-right-arrow"></i>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    <section class="news-details">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="news-details__left">
                        <img
                                class="lazy"
                                data-src="{{ asset(mainImage) }}"
                                alt=""
                        />
                        <h3 class="news-details__title mt-3">
                            {{ project.title }}
                        </h3>
                        {{ project.post.content.description|raw }}
                        <div class="news-details__bottom">
                            <div class="news-details__social-list">
                                <a href="#" target="_blank" id="linkedin_share_link"><i class="fab fa-linkedin"></i></a>
                                <a href="#" target="_blank" id="facebook_share_link" class="clr-fb"><i
                                            class="fab fa-facebook"></i></a>
                                <a href="#" target="_blank" id="whatsapp_share_link" class="clr-ins"><i
                                            class="fab fa-whatsapp"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendors/swiper/swiper.min.js') }}"></script>
{% endblock %}