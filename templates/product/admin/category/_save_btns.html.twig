<div class="pull-left  ml-10">
    <button type="reset" class="btn btn-default mr-5">
        Reset <i class="icon-reload-alt position-right"></i>
    </button>
</div>
<div class="pull-right  mr-10">
    {% if
        (category.parent is not empty and category.parent.depth + 1 == constant("App\\BaseBundle\\SystemConfiguration::CATEGORY_MAXIMAL_DEPTH_LEVEL"))
        or
        (category.parent is empty and constant("App\\BaseBundle\\SystemConfiguration::CATEGORY_MAXIMAL_DEPTH_LEVEL") == 1)
    %}
        <button type="button" class="btn btn-gray mr-5" name="action-btn" value="saveAndNext">
            Save & Manage Specs <i class="icon-arrow-right14 position-right"></i>
        </button>
    {% else %}
        <button type="reset" class="btn btn-default mr-5">
            Reset <i class="icon-reload-alt position-right"></i>
        </button>
    {% endif %}

    <button type="submit" class="btn btn-primary mr-5">
        Save <i class="icon-arrow-right14 position-right"></i>
    </button>
</div>