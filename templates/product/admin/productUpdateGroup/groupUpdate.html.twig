            $('#removeDiscount').change(function () {
                if ($(this).is(":checked")) {
                    $('#promotionDiscount').attr('disabled', true);
                    $('#promotionExpiry').attr('disabled', true);
                } else {
                    $('#promotionDiscount').attr('disabled', false);
                    $('#promotionExpiry').attr('disabled', false);
                }
            });

            $('[data-deselect-when-select]').click(function () {
                let deselectElement = $(this).data("deselect-when-select");
                let element = $(deselectElement).prop("checked", false);
                $.uniform.update(element)
            })
            
            // Handle promotion removal checkbox
            $('#removePromotion').change(function() {
                var isChecked = $(this).is(':checked');
                var promotionDiscount = $('#promotionDiscount');
                var promotionExpiry = $('#promotionExpiry');
                
                if (isChecked) {
                    // Disable promotion fields when removing promotions
                    promotionDiscount.prop('disabled', true).val('');
                    promotionExpiry.prop('disabled', true).val('');
                    
                    // Add visual styling to show disabled state
                    promotionDiscount.addClass('disabled-field');
                    promotionExpiry.addClass('disabled-field');
                } else {
                    // Enable promotion fields when not removing promotions
                    promotionDiscount.prop('disabled', false);
                    promotionExpiry.prop('disabled', false);
                    
                    // Remove visual styling
                    promotionDiscount.removeClass('disabled-field');
                    promotionExpiry.removeClass('disabled-field');
                }
            });
            
            // Initialize promotion fields state on page load
            if ($('#removePromotion').is(':checked')) {
                $('#promotionDiscount').prop('disabled', true).addClass('disabled-field');
                $('#promotionExpiry').prop('disabled', true).addClass('disabled-field');
            }
            

            
            // Handle price update type change
            $('#priceUpdateType').change(function() {
                var type = $(this).val();
                var unit = $('#priceUpdateUnit');
                var help = $('#priceUpdateHelp');
                var valueInput = $('#priceUpdateValue');
                
                if (type === '+percentage') {
                    unit.text('%');
                    help.text('Enter the percentage to increase prices (e.g., 10 for 10% increase)');
                    valueInput.attr('min', '0');
                    valueInput.attr('max', '1000');
                } else if (type === '-percentage') {
                    unit.text('%');
                    help.text('Enter the percentage to decrease prices (e.g., 10 for 10% decrease)');
                    valueInput.attr('min', '0');
                    valueInput.attr('max', '100');
                } else if (type === '+fixed') {
                    unit.text('Amount');
                    help.text('Enter the fixed amount to add to current prices');
                    valueInput.attr('min', '0');
                    valueInput.removeAttr('max');
                } else if (type === '-fixed') {
                    unit.text('Amount');
                    help.text('Enter the fixed amount to subtract from current prices');
                    valueInput.attr('min', '0');
                    valueInput.removeAttr('max');
                } else {
                    unit.text('');
                    help.text('');
                    valueInput.removeAttr('min');
                    valueInput.removeAttr('max');
                }
            });
            
            // Currency field removed - prices are updated for all currencies
            
