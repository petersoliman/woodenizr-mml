{% extends 'fe/base.html.twig' %}
{% block title %}{{ "wishlist_txt"|trans }}{% endblock %}
{% import 'fe/macros.html.twig' as macros %}

{% block stylesheets %}
    {{ parent() }}

    {{ macros.assetCSS(asset('pages-assets/wish-list/wish-list.styles.css')) }}
{% endblock %}

{% block content %}
    {% include "fe/_pages_header.html.twig" with {"pageTitle": "wishlist_txt"|trans, "marginBottomZero": true } %}

    <div class="l-container">
        <div class="l-product-list-grid" data-l-product-list-grid="true" data-l-product-list-grid-url="{{ path('fe_profile_wishlist_api',app.request.attributes.get('_route_params')) }}">
            <div class="wrapper-profile">
                <div class="l-container">
                    <div class="l-flex-row">
                        <div class="l-flex-col-xl-3 wrapper-profile-sidebar" data-profile-sidebar="true">
                            {% include "user/frontEnd/profile/_sidemenu.html.twig" %}
                        </div>
                        <div class="l-flex-col-xl-9 wrapper-profile-card" data-profile-card="true">

                            <div class="loading" data-l-product-list-grid-products-container="true">
                                <div class="l-product-list-grid-col-products-header">
                                    <div class="l-flex-row">
                                        <div class="l-flex-col-lg-6 l-product-list-grid-col-products-header-results-count">
                                            <span class="ui-products-list-results-count-box"><strong data-l-product-list-grid-total="true">--</strong> {{ "results_txt"|trans }}</span>
                                        </div>
                                        {% include "user/frontEnd/profile/_wishlist_sort_by.html.twig" %}
                                    </div>
                                </div>
                                <div class="l-404-row" data-l-product-list-grid-items-empty="true" style="display: none;">
                                    <div class="l-404-row-picture">
                                        <svg width="271" height="172" viewBox="0 0 271 172" fill="none" xmlns="http://www.w3.org/2000/svg">
