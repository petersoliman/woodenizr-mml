                                                </svg>
                                            </button>
                                        </label>
                                        <ul class="form-input-errors" data-validate-input-errors="confirm_password">
                                            {{ form_errors(form.plainPassword.second) }}
                                        </ul>
                                    </div>
                                </div>
                                <div class="l-flex-col-xl-12">
                                    <div class="buttons">
                                        <button class="btn btn-primary btn-lg btn-block" disabled type="submit">{{ "change_password_txt"|trans }}</button>
                                    </div>
                                </div>
                            </div>
                        {{ form_end(form) }}
                        <br>
                        <br>
                        <br>
                    </div>
                </div>
            </div>
            <div class="l-flex-col-xl-1"></div>
            <div class="l-flex-col-xl-6">
                {% set image = getDCA(9, false) %}
                {% if image is empty %}
                    {% set image = asset('assets/img/sign-img-2.webp') %}
                {% endif %}
                {{ editDCA(9) }}
                <img class="aside-img" src="{{ image }}" alt="{{ "reset_password_txt"|trans }}"/>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ macros.assetCSS(asset('pages-assets/reset-password/reset-password.lazy.styles.css'), true) }}

    {{ macros.assetJS(asset('pages-assets/reset-password/reset-password.js')) }}
    {{ macros.assetJS(asset('pages-assets/reset-password/reset-password.lazy.js'), true) }}
{% endblock %}