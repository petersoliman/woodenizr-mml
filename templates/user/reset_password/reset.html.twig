{% extends 'fe/base.html.twig' %}
{% block title %}{{ "reset_password_txt"|trans }}{% endblock %}
{% import 'fe/macros.html.twig' as macros %}
{% block stylesheets %}
    {{ parent() }}
    {{ macros.assetCSS(asset('pages-assets/reset-password/reset-password.styles.css')) }}
{% endblock %}

