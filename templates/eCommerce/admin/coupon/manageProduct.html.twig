{% extends 'adminTemplate/base.html.twig' %}
{% set page_title %}Manage {{ coupon.code }} Coupon Products{% endset %}
{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}
{% block breadcrumb %}
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="{{ path('dashboard') }}"><i class="icon-home2 position-left"></i>Dashboard</a></li>
            <li><a href="{{ path('coupon_index') }}">Coupons list</a></li>
            <li><a href="{{ path('coupon_edit',{"id":coupon.id}) }}">Edit {{ coupon.code }}</a></li>
            <li class="active">{{ page_title }}</li>
        </ul>
    </div>
{% endblock %}
{% block body %}
    {% include 'product/admin/product/_filter.html.twig' %}
    <!-- Ajax sourced data -->
    <div class="panel panel-flat panel-filter">
        <div class="panel-body">
            <table class="table datatable-ajax table-striped datatable-responsive">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" class="checkAllProduct">
                        </th>
                        <th>#</th>
                        <th>SKU</th>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Category</th>
                        <th>Created</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
    <!-- /ajax sourced data -->

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('admin/js/plugins/tables/datatables/datatables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('admin/js/plugins/forms/selects/select2.min.js') }}"></script>
    {{ include('adminTemplate/datatable.html.twig', {'path':path('coupon_manage_product_datatable', {"id":coupon.id}|merge(app.request.query.all) )|escape('js') }) }}
    <script type="text/javascript">
        $(function () {
            var inProgress = 0;
            function handleBefore() {
                inProgress++;
                $('.checkAllProduct').attr("disabled", "disabled");
            }

            function handleComplete() {
                if (!--inProgress) {
                    $('.checkAllProduct').removeAttr("disabled");
                }
            }

            $('.checkAllProduct').click(function () {
                var checkAllProductIsChecked = $(this).is(":checked");
                if (checkAllProductIsChecked == true) {
                    var type = 'add';
                } else {
                    var type = 'remove';
                }
                var products = new Array();
                $(".checkProduct").each(function () {
                    $(this).prop('checked', checkAllProductIsChecked);
                    products.push($(this).val());
                });
                var productsJson = JSON.stringify(products);

                $('input:checkbox').attr("disabled", "disabled");

                $.ajax({
                    type: "POST",
                    url: "{{ path('coupon_manage_product_update_ajax', {'id':coupon.id }) }}",
                    beforeSend: handleBefore,
                    data: {'id': productsJson, 'type': type},
                    success: function (result) {
                        $('input:checkbox').removeAttr("disabled");
                        handleComplete();
                    }
                });
            });
            $('body').on('click', '.checkProduct', function () {
                var $this = $(this);
                $this.attr("disabled", "disabled");
                var id = $this.val();

                $.ajax({
                    type: "POST",
                    url: "{{ path('coupon_manage_product_update_ajax', {'id':coupon.id }) }}",
                    data: {'id': id},
                    beforeSend: handleBefore,
                    success: function (result) {
                        $this.removeAttr("disabled");

                        var checkAllProductIsChecked = $('.checkAllProduct').is(":checked");
                        if (checkAllProductIsChecked == true) {
                            $('.checkAllProduct').prop("checked", false);
                        }

                        handleComplete();
                    }
                });
            });
        });
    </script> 
{% endblock javascripts %}
