{% extends 'adminTemplate/base.html.twig' %}
{% set page_title %}Currencies List{% endset %}
{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}
{% block breadcrumb %}
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="{{ path('dashboard') }}"><i class="icon-home2 position-left"></i>Dashboard</a></li>
            <li class="active">{{ page_title }}</li>
        </ul>
    </div>
{% endblock %}
{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <ul class="fab-menu fab-menu-fixed fab-menu-bottom-right">
            <li>
                <a href="{{ path('currency_new') }}"
                   class="fab-menu-btn btn bg-blue btn-float btn-rounded btn-icon">
                    <i class="fab-icon-open icon-plus3"></i>
                    <i class="fab-icon-close icon-cross2"></i>
                </a>
            </li>
        </ul>
    {% endif %}
    <!-- Ajax sourced data -->
    <div class="panel panel-flat">
        <div class="panel-body">
            <table class="table datatable-ajax table-striped datatable-responsive">
                <thead>
                <tr>
                    <th>Code</th>
                    <th>Title</th>
                    <th>Symbol</th>
                    <th>Default</th>
                    <th>Created</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
    <!-- /ajax sourced data -->

{% endblock %}
{% block modalCode %}
    <div id="modal_change_default" class="modal fade">
        <div class="modal-dialog modal-sm">
            <div class="modal-content bg-warning-600">
                <div class="modal-header bg-warning-600">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h6 class="modal-title">Be careful</h6>
                </div>

                <form method="post" id="change-default-form" action="#">
                    <div class="modal-body text-center">
                        <h2>Are you sure?</h2>
                        <p>Are you sure to make
                            <strong id="change-default-currency-title"></strong> as a default currency?
                        </p>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn bg-warning-700">Yes</button>
                        <button type="reset" class="btn btn-link text-white" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock modalCode %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('admin/js/plugins/tables/datatables/datatables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('admin/js/plugins/forms/selects/select2.min.js') }}"></script>
    {{ include('adminTemplate/datatable.html.twig', {'path':path('currency_datatable')}) }}

    <script>
        $(document).ready(function () {
            $(document.body).on("click", ".change-default-btn", function () {
                var currencyTitle = $(this).data('currency-title');
                var action = $(this).data('action');
                $('#change-default-form').attr('action', action);
                $('#change-default-currency-title').text(currencyTitle);
            });
        })
    </script>
{% endblock javascripts %}
