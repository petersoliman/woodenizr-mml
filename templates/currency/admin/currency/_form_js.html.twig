<script>
    $(document).ready(function () {
        $("[name*='[code]']").change(function () {
            var title = $(this).find("option:selected").data("title");
            var symbol = $(this).find("option:selected").data("symbol");

            var titleInput = $("[name*='currency[title]']");
            var symbolInput = $("[name*='currency[symbol]']");

            if (titleInput.val() === "") {
                titleInput.val(title);
            }
            if (symbolInput.val() === "") {
                symbolInput.val(symbol);
            }
        });
    });
</script>