{% import 'adminTemplate/macros.html.twig' as macros %}
<div class="panel panel-flat">
    <div class="panel-body">
        <div class="row">
            {{ macros.input(form.title) }}
            {{ macros.input(form.tarteb) }}
        </div>
        <div class="row">
            {{ macros.input(form.contactText, 12) }}
        </div>
        <div class="row">
            {{ macros.input(form.post.brief,12) }}
        </div>
        <div class="row">
            {% if service.post %}
                <div class="col-12 text-right">
                    {{ openGalleryBtn(service.post.id) }}
                </div>
            {% endif %}
            {{ macros.input(form.post.description, 12, null,null, 'form-control ckeditor') }}
        </div>
    </div>
    <div class="panel-footer">
        {% include 'adminTemplate/saveAndResetFormFooter.html.twig' %}
    </div>
</div>
{% include '@PNSeo/Administration/Seo/seo.html.twig' with { 'seoForm':form.seo, 'entity':service } %}
