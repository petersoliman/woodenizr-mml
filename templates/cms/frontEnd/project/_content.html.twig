<div class="l-container">
    <div class="l-flex-row">
        <div class="l-flex-col-xxl-2"></div>
        <div class="l-flex-col-xxl-8 wrapper-desc-col">
            <p>{{ seoPage.brief }}</p>
        </div>
        <div class="l-flex-col-xxl-2"></div>
        {% for project in projects %}
        {% if project.post.mainImage %}
            {% set image = asset(project.post.mainImage.assetPath) %}
        {% else %}
            {% set image = asset('assets/img/product-img-placeholder.webp') %}
        {% endif %}

        <div class="l-flex-col-xxl-3 l-flex-col-lg-4 l-flex-col-md-6 wrapper-project-col">
            <a class="l-featured-floating-banner ui-featured-floating-banner" href="{{ path('fe_project_show', {'slug':project.seo.slug}) }}">
                <picture>
                    <!--[if IE 9]>
                    <video style="display: none;><![endif]-->
                    <source data-srcset="{{ image|webp(null, 408) }}" media="--small"/>
                    <source data-srcset="{{ image|webp(null, 394) }}" media="--medium"/>
                    <source data-srcset="{{ image|webp(null, 255) }}" media="--large"/>
                    <source data-srcset="{{ image|webp(null, 328) }}" media="--x-large"/>
                    <source data-srcset="{{ image|webp(null, 230) }}" media="--xx-large"/>
                    <!--[if IE 9]></video><![endif]-->
                    <img
                            class="l-featured-floating-banner-img lazyload"
                            width="388"
                            height="283"
                            data-expand="-20"
                            src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                            data-src="{{ image|webp(null, 283) }}"
                            alt="{{ project.title }}"
                    />
                </picture>
                <div class="l-featured-floating-banner-caption ui-featured-floating-banner-caption">
                    <h5 class="ui-featured-floating-banner-caption-title l-featured-floating-banner-caption-title">
                        {{ project.title }}
                    </h5>
                    <p class="ui-featured-floating-banner-caption-txt l-featured-floating-banner-caption-txt">
                        {{ project.post.content.brief }}
                    </p>
                </div>
            </a>
        </div>
        {% else %}
            {% include "fe/_not_found_content.html.twig" %}
        {% endfor %}

    </div>

    <div class="l-product-list-grid-pagination" data-l-product-list-grid-pagination="true">
        <br><br>
        {% include "fe/_pagination.html.twig" %}
    </div>
</div>